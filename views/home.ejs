<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="/css/home.css">

        <script src="https://kit.fontawesome.com/274f867545.js" crossorigin="anonymous"></script>
    
    </head>
    <body>
       <div id="outer">
           <h1 id="heading">TODO App</h1>
           <form action="/create_todo" method="post" id="formdata">
               <div id="description">
               DESCRIPTION<br><textarea name="description" rows="3" cols="97"placeholder="What do you need to do?"></textarea>
               </div>
               <div>
                   CATEGORY<select id="Cat" name="category" placeholder="Choose a category">
                    <option value="choose a category">Choose a category</option>
                       <option value="personal">Personal</option>
                       <option value="work">Work</option>
                       <option value="school">School</option>
                       <option value="cleaning">Cleaning</option>
                       <option value="other">other</option>
                   </select>
               </div>
               <div>
                   DATE<input type="date" name="date">
               </div>
               <div>
                   <button type="submit"><i class="fa-solid fa-plus"></i>ADD TASK</button>
                   <button type="submit"><i class="fa-solid fa-trash-can"></i>DELETE TASK</button>
               </div>
               <div>
                  <ul>
                      <% for(let i of todo_list){%>
                        <li>
                                <p><%= i.description %></p>
                                <p><%= i.category %></p>
                        </li>
                        
                        <%}
                      %>
                  </ul>
               </div>
           </form>
       </div>
    </body>
</html>